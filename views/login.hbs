
<div class="container m-5 text-bg-success text-center">
    <h1 class="m-5">Ingreso de Usuarios</h1>
</div>

<div class="container text-center m-5">
    <form action="/login" method="post">
        {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
        {{/if}}
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Usuario</label>
            <input type="text" class="form-control" id="username" aria-describedby="usernamelHelp" name="username">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" aria-describedby="passwordHelp" name="password">
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-success">Ingresar</button>
        </div>
        <div class="mb-3">
            <button type="reset" class="btn btn-danger">Borrar datos</button>
        </div>
        <div class="mb-3">
            <a href="/registrar" class="btn btn-success">Crear usuario</a>
        </div>
    </form>
</div>